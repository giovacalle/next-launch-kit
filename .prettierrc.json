{
  "tabWidth": 2,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "endOfLine": "auto",
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "tailwindFunctions": ["tv"],
  "importOrder": [
    "^(react|next)/?(.*)$",
    "^@/(core|db)/(.*)$",
    "^@/(hooks|stores)/(.*)$",
    "^@/(lib|utils)/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/components/(.*)$",
    "^@/(?!.*\\.css$).*$",
    "^[./]",
    "^@/.*\\.css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
